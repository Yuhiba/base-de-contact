<h1>Listing contact</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
  </tr>

  <% @persons.each do |person| %>
    <tr>
      <td><%= person.firstname %></td> <td><%= person.lastname %></td>
      <td><%= link_to 'Show', person_path(person) %></td>
      <td><%= link_to 'Edit', edit_person_path(person) %></td>
    </tr>
  <% end %>
</table>

<p>
  <%= link_to 'New contact', new_person_path %>
</p>

<p>
  <%= link_to 'Back', persons_path %>
</p>


